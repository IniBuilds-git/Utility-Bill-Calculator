<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.MeterReadingController"
      spacing="20" style="-fx-background-color: #f1f5f9;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Meter Readings">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
            <Label text="Record and manage meter readings" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </VBox>

        <Button text="Import Readings"
                onAction="#handleImport"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 14 30; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="+ New Reading"
                onAction="#showAddReadingDialog"
                style="-fx-background-color: #0d9488; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 14 30; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>

    <!-- Search and Filter Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15 20;">
        <TextField fx:id="searchField"
                   promptText="Search by customer or meter ID..."
                   HBox.hgrow="ALWAYS"
                   prefHeight="40"
                   style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-border-color: transparent; -fx-padding: 10 15; -fx-font-size: 14px;"/>
        <ComboBox fx:id="readingTypeCombo" promptText="Reading Type" prefWidth="150" prefHeight="40"/>
        <DatePicker fx:id="fromDatePicker" promptText="From Date" prefHeight="40"/>
        <DatePicker fx:id="toDatePicker" promptText="To Date" prefHeight="40"/>
        <Button text="Search" 
                onAction="#handleSearch"
                style="-fx-background-color: #e2e8f0; -fx-text-fill: #475569; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>

    <!-- Readings Table -->
    <TableView fx:id="readingsTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12;">
        <columns>
            <TableColumn fx:id="readingIdCol" text="Reading ID" prefWidth="120"/>
            <TableColumn fx:id="customerCol" text="Customer" prefWidth="180"/>
            <TableColumn fx:id="meterIdCol" text="Meter ID" prefWidth="120"/>
            <TableColumn fx:id="readingCol" text="Reading" prefWidth="100"/>
            <TableColumn fx:id="previousCol" text="Previous" prefWidth="100"/>
            <TableColumn fx:id="consumptionCol" text="Consumption" prefWidth="100"/>
            <TableColumn fx:id="typeCol" text="Type" prefWidth="100"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="120"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="No meter readings found" style="-fx-font-size: 16px; -fx-text-fill: #94a3b8;"/>
                <Label text="Record a new reading to get started" style="-fx-font-size: 13px; -fx-text-fill: #cbd5e1;"/>
            </VBox>
        </placeholder>
    </TableView>

</VBox>
