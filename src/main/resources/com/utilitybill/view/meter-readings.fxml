<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.MeterReadingController"
      spacing="20"
      styleClass="light-background"
      stylesheets="@../css/styles.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Meter Readings" styleClass="page-title"/>
            <Label text="Record and manage meter readings" styleClass="page-subtitle"/>
        </VBox>

        <Button text="+ New Reading"
                onAction="#showAddReadingDialog"
                styleClass="primary-button">
            <padding>
                <Insets top="14" right="30" bottom="14" left="30"/>
            </padding>
        </Button>
    </HBox>

    <!-- Search and Filter Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          styleClass="search-bar">
        <TextField fx:id="searchField"
                   promptText="Search by customer or meter ID..."
                   HBox.hgrow="ALWAYS"
                   prefHeight="40"
                   styleClass="search-field"/>
        <DatePicker fx:id="fromDatePicker" promptText="From Date" prefHeight="40" styleClass="date-picker"/>
        <DatePicker fx:id="toDatePicker" promptText="To Date" prefHeight="40" styleClass="date-picker"/>
        <Button text="Search"
                onAction="#handleSearch"
                styleClass="secondary-button"
                style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Readings Table -->
    <TableView fx:id="readingsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="readingIdCol" text="Reading ID" prefWidth="120"/>
            <TableColumn fx:id="customerCol" text="Customer" prefWidth="180"/>
            <TableColumn fx:id="meterIdCol" text="Meter ID" prefWidth="120"/>
            <TableColumn fx:id="readingCol" text="Reading" prefWidth="100"/>
            <TableColumn fx:id="previousCol" text="Previous" prefWidth="100"/>
            <TableColumn fx:id="consumptionCol" text="Consumption" prefWidth="100"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="120"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="No meter readings found" style="-fx-font-size: 16px; -fx-text-fill: #94a3b8;"/>
                <Label text="Record a new reading to get started" style="-fx-font-size: 13px; -fx-text-fill: #cbd5e1;"/>
            </VBox>
        </placeholder>
    </TableView>

</VBox>
