<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.PaymentController"
      spacing="20"
      styleClass="light-background"
      stylesheets="@../css/styles.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Payment Processing" styleClass="page-title"/>
            <Label text="Record and track customer payments" styleClass="page-subtitle"/>
        </VBox>
        <Button text="+ Record Payment"
                onAction="#showRecordPaymentDialog"
                styleClass="primary-button">
            <padding>
                <Insets top="14" right="30" bottom="14" left="30"/>
            </padding>
        </Button>
    </HBox>

    <!-- Summary Cards -->
    <HBox spacing="20">
        <VBox HBox.hgrow="ALWAYS" spacing="5"
              styleClass="stat-card-success">
            <Label text="Today's Payments" styleClass="stat-label"/>
            <Label fx:id="todayPaymentsLabel" text="£0.00" styleClass="stat-value"/>
        </VBox>
        <VBox HBox.hgrow="ALWAYS" spacing="5"
              styleClass="stat-card">
            <Label text="This Week" styleClass="stat-label"/>
            <Label fx:id="weekPaymentsLabel" text="£0.00" styleClass="stat-value"/>
        </VBox>
        <VBox HBox.hgrow="ALWAYS" spacing="5"
              styleClass="stat-card">
            <Label text="This Month" styleClass="stat-label"/>
            <Label fx:id="monthPaymentsLabel" text="£0.00" styleClass="stat-value"/>
        </VBox>
    </HBox>

    <!-- Filter Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          styleClass="search-bar">
        <TextField fx:id="searchField"
                   promptText="Search by reference or customer..."
                   HBox.hgrow="ALWAYS"
                   prefHeight="40"
                   styleClass="search-field"/>
        <ComboBox fx:id="methodCombo" promptText="Payment Method" prefWidth="150" prefHeight="40" styleClass="combo-box"/>
        <ComboBox fx:id="statusCombo" promptText="Status" prefWidth="120" prefHeight="40" styleClass="combo-box"/>
        <DatePicker fx:id="fromDatePicker" promptText="From Date" prefHeight="40" styleClass="date-picker"/>
        <DatePicker fx:id="toDatePicker" promptText="To Date" prefHeight="40" styleClass="date-picker"/>
        <Button text="Search"
                onAction="#handleSearch"
                styleClass="secondary-button"
                style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Payments Table -->
    <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="referenceCol" text="Reference" prefWidth="120"/>
            <TableColumn fx:id="customerCol" text="Customer" prefWidth="180"/>
            <TableColumn fx:id="invoiceCol" text="Invoice #" prefWidth="120"/>
            <TableColumn fx:id="amountCol" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="methodCol" text="Method" prefWidth="120"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="120"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="100"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="No payments found" style="-fx-font-size: 16px; -fx-text-fill: #94a3b8;"/>
                <Label text="Record a payment to get started" style="-fx-font-size: 13px; -fx-text-fill: #cbd5e1;"/>
            </VBox>
        </placeholder>
    </TableView>

</VBox>
