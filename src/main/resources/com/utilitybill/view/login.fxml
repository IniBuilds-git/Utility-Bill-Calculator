<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utilitybill.controller.LoginController"
            styleClass="gradient-background"
            stylesheets="@styles.css">

    <center>
        <VBox alignment="CENTER" spacing="0" maxWidth="450">
            <!-- Login Card -->
            <VBox spacing="25" alignment="CENTER" styleClass="login-card">
                <padding>
                    <Insets top="50" right="40" bottom="50" left="40"/>
                </padding>

                <!-- Logo/Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Power" styleClass="logo-text"/>
                    <Label text="Utility Bill Manager" styleClass="login-title"/>
                    <Label text="Sign in to your account" styleClass="login-subtitle"/>
                </VBox>

                <!-- Login Form -->
                <VBox spacing="20" maxWidth="320" alignment="CENTER">

                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label text="Username" styleClass="form-label"/>
                        <TextField fx:id="usernameField"
                                   promptText="Enter your username"
                                   prefHeight="45"
                                   styleClass="text-field">
                            <padding>
                                <Insets top="12" right="15" bottom="12" left="15"/>
                            </padding>
                        </TextField>
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label text="Password" styleClass="form-label"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Enter your password"
                                       prefHeight="45"
                                       onAction="#handleLogin"
                                       styleClass="password-field">
                            <padding>
                                <Insets top="12" right="15" bottom="12" left="15"/>
                            </padding>
                        </PasswordField>
                    </VBox>

                    <!-- Error Message -->
                    <Label fx:id="errorLabel"
                           visible="false"
                           managed="false"
                           wrapText="true"
                           styleClass="error-message">
                        <padding>
                            <Insets top="10" right="15" bottom="10" left="15"/>
                        </padding>
                    </Label>

                    <!-- Login Button -->
                    <Button text="Sign In"
                            onAction="#handleLogin"
                            prefHeight="45"
                            maxWidth="Infinity"
                            styleClass="primary-button"/>

                </VBox>

                <!-- Footer -->
                <VBox alignment="CENTER" spacing="10">
                    <Separator/>
                    <Label text="Default: admin / Admin123" styleClass="hint-text"/>
                </VBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>