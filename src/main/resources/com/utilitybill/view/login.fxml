<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utilitybill.controller.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #1e293b);">

    <center>
        <VBox alignment="CENTER" spacing="0" maxWidth="450">
            <!-- Login Card -->
            <VBox spacing="25" alignment="CENTER"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 50 40;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.25)" radius="30" offsetY="10"/>
                </effect>

                <!-- Logo/Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="⚡" style="-fx-font-size: 48px;"/>
                    <Label text="Utility Bill Manager">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Label>
                    <Label text="Sign in to your account" style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
                </VBox>

                <!-- Login Form -->
                <VBox spacing="20" maxWidth="320" alignment="CENTER">

                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label text="Username" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <TextField fx:id="usernameField"
                                   promptText="Enter your username"
                                   prefHeight="45"
                                   style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 12 15; -fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Enter your password"
                                       prefHeight="45"
                                       onAction="#handleLogin"
                                       style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 12 15; -fx-font-size: 14px;"/>
                    </VBox>

                    <!-- Error Message -->
                    <Label fx:id="errorLabel"
                           visible="false"
                           managed="false"
                           wrapText="true"
                           style="-fx-text-fill: #ef4444; -fx-font-size: 13px; -fx-padding: 10 15; -fx-background-color: #fef2f2; -fx-background-radius: 8;"/>

                    <!-- Login Button -->
                    <Button text="Sign In"
                            onAction="#handleLogin"
                            prefHeight="45"
                            maxWidth="Infinity"
                            style="-fx-background-color: #0d9488; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>

                </VBox>

                <!-- Footer -->
                <VBox alignment="CENTER" spacing="10">
                    <Separator/>
                    <Label text="Default: admin / Admin123" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px; -fx-font-style: italic;"/>
                </VBox>

            </VBox>

            <!-- Copyright -->
            <Label text="© 2024 Utility Bill Management System" 
                   style="-fx-text-fill: #94a3b8; -fx-font-size: 12px; -fx-padding: 20 0 0 0;"/>

        </VBox>
    </center>

</BorderPane>
