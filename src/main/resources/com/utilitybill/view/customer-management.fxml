<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.CustomerController"
      spacing="20" style="-fx-background-color: #f1f5f9;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Customer Management">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
            <Label text="Manage customer accounts and information"
                   style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </VBox>
        <Button text="+ Add Customer"
                onAction="#showAddCustomerDialog"
                style="-fx-background-color: #0d9488; -fx-text-fill: white;
                       -fx-font-size: 15px; -fx-font-weight: bold;
                       -fx-padding: 14 30; -fx-background-radius: 8;
                       -fx-cursor: hand;"/>
    </HBox>

    <!-- Search Bar (filter removed) -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 10;
                 -fx-padding: 15 20;">
        <TextField fx:id="searchField"
                   promptText="Search by name, account number, or email..."
                   HBox.hgrow="ALWAYS"
                   prefHeight="40"
                   style="-fx-background-color: #f1f5f9; -fx-background-radius: 8;
                          -fx-border-color: transparent; -fx-padding: 10 15;
                          -fx-font-size: 14px;"/>
        <Button text="Search" onAction="#handleSearch"
                style="-fx-background-color: #e2e8f0; -fx-text-fill: #475569;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-padding: 10 20; -fx-background-radius: 8;
                       -fx-cursor: hand;"/>
        <Button text="Refresh" onAction="#refreshData"
                style="-fx-background-color: #e2e8f0; -fx-text-fill: #475569;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-padding: 10 20; -fx-background-radius: 8;
                       -fx-cursor: hand;"/>
    </HBox>

    <!-- Customer Table -->
    <TableView fx:id="customerTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 12;">
        <columns>
            <TableColumn fx:id="accountNumberCol" text="Account #" prefWidth="120"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="180"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="140"/>
            <TableColumn fx:id="addressCol" text="Address" prefWidth="200"/>
            <TableColumn fx:id="balanceCol" text="Balance" prefWidth="100"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="150"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="No customers found"
                       style="-fx-font-size: 16px; -fx-text-fill: #94a3b8;"/>
                <Label text="Add a new customer to get started"
                       style="-fx-font-size: 13px; -fx-text-fill: #cbd5e1;"/>
            </VBox>
        </placeholder>
    </TableView>

    <!-- Pagination and Summary -->
    <HBox alignment="CENTER" spacing="20">
        <Label fx:id="summaryLabel" text="Showing 0 customers"
               style="-fx-font-size: 13px; -fx-text-fill: #64748b;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Pagination fx:id="pagination" maxPageIndicatorCount="5"/>
    </HBox>

</VBox>