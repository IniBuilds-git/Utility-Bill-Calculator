<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.TariffController"
      spacing="20"
      styleClass="light-background"
      stylesheets="@styles.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Tariff Management" styleClass="page-title"/>
            <Label text="Configure electricity and gas tariff rates" styleClass="page-subtitle"/>
        </VBox>

        <Button text="+ Add Tariff"
                onAction="#showAddTariffDialog"
                styleClass="primary-button">
            <padding>
                <Insets top="14" right="30" bottom="14" left="30"/>
            </padding>
        </Button>
    </HBox>

    <!-- Tariff Type Tabs -->
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="tab-pane">

        <!-- Electricity Tariffs -->
        <Tab text="Electricity Tariffs">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <TableView fx:id="electricityTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="elecNameCol" text="Tariff Name" prefWidth="240"/>
                        <TableColumn fx:id="elecStandingCol" text="Standing Charge" prefWidth="160"/>
                        <TableColumn fx:id="elecDayRateCol" text="Day Rate" prefWidth="140"/>
                        <TableColumn fx:id="elecNightRateCol" text="Night Rate" prefWidth="140"/>
                        <TableColumn fx:id="elecStatusCol" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="elecActionsCol" text="Actions" prefWidth="150"/>
                    </columns>

                    <placeholder>
                        <Label text="No electricity tariffs configured"/>
                    </placeholder>
                </TableView>
            </VBox>
        </Tab>

        <!-- Gas Tariffs -->
        <Tab text="Gas Tariffs">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <TableView fx:id="gasTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="gasNameCol" text="Tariff Name" prefWidth="240"/>
                        <TableColumn fx:id="gasStandingCol" text="Standing Charge" prefWidth="160"/>
                        <TableColumn fx:id="gasUnitCol" text="Unit Rate" prefWidth="140"/>
                        <TableColumn fx:id="gasCvCol" text="Calorific Value" prefWidth="140"/>
                        <TableColumn fx:id="gasCorrectCol" text="Correction Factor" prefWidth="160"/>
                        <TableColumn fx:id="gasStatusCol" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="gasActionsCol" text="Actions" prefWidth="150"/>
                    </columns>

                    <placeholder>
                        <Label text="No gas tariffs configured"/>
                    </placeholder>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>

    <!-- Info Panel -->
    <HBox spacing="20" styleClass="info-panel">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="About Tariffs" styleClass="info-title"/>
            <Label text="Tariffs define the standing charge and unit rates used to calculate bills. Electricity can have day/night rates, and gas includes conversion factors."
                   wrapText="true" styleClass="info-text"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Current VAT Rate" styleClass="info-title"/>
            <Label text="5% (Reduced rate for energy)" styleClass="info-text"/>
        </VBox>
    </HBox>

</VBox>
