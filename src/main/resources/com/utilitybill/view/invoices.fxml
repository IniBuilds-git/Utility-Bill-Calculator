<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.utilitybill.controller.InvoiceController"
      spacing="20"
      styleClass="light-background"
      stylesheets="@../css/styles.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="5">
        <Label text="Invoice Management" styleClass="page-title"/>
        <Label text="Generate and manage customer invoices" styleClass="page-subtitle"/>
    </VBox>

    <!-- Controls Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <ComboBox fx:id="customerComboBox" prefWidth="250" promptText="Select Customer..." styleClass="combo-box"/>
        <Button text="Load Invoices" onAction="#handleLoadInvoices" styleClass="primary-button"/>
        <Button text="Clear" onAction="#handleClear" styleClass="secondary-button"/>
    </HBox>

    <!-- Summary Stats (Simplified) -->
    <HBox spacing="40" alignment="CENTER_LEFT">
        <VBox spacing="2">
            <Label text="TOTAL BILLED" styleClass="status-text"/>
            <Label fx:id="totalBilledLabel" text="£0.00" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #0f172a;"/>
        </VBox>
        <VBox spacing="2">
            <Label text="TOTAL PAID" styleClass="status-text"/>
            <Label fx:id="totalPaidLabel" text="£0.00" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #10b981;"/>
        </VBox>
        <VBox spacing="2">
            <Label text="BALANCE DUE" styleClass="status-text"/>
            <Label fx:id="balanceDueLabel" text="£0.00" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #ef4444;"/>
        </VBox>
    </HBox>

    <!-- Actions Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="+ Generate Invoice" onAction="#handleGenerateInvoice" styleClass="secondary-button"/>
        <Button text="Record Payment" onAction="#handleAddPayment" styleClass="secondary-button"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="View Detailed Summary" onAction="#handleViewSummary" styleClass="secondary-button"/>
        <Button text="Delete Selected" onAction="#handleDeleteInvoice" style="-fx-text-fill: #ef4444; -fx-background-color: transparent; -fx-cursor: hand; -fx-font-weight: 600;"/>
    </HBox>

    <!-- Data Table -->
    <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="invoiceIdCol" text="ID" prefWidth="120"/>
            <TableColumn fx:id="periodCol" text="Billing Period" prefWidth="200"/>
            <TableColumn fx:id="meterTypeCol" text="Type" prefWidth="80"/>
            <TableColumn fx:id="tariffCol" text="Tariff" prefWidth="140"/>
            <TableColumn fx:id="kwhCol" text="Usage" prefWidth="100"/>
            <TableColumn fx:id="totalCol" text="Total" prefWidth="90"/>
            <TableColumn fx:id="paidCol" text="Paid" prefWidth="90"/>
            <TableColumn fx:id="balanceCol" text="Balance" prefWidth="100"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="90"/>
        </columns>
        <placeholder>
            <Label text="No invoices found" styleClass="hint-text"/>
        </placeholder>
    </TableView>

</VBox>
