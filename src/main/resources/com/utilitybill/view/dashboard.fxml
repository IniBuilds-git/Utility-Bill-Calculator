<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utilitybill.controller.DashboardController"
            styleClass="light-background"
            stylesheets="@styles.css">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-nav">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <!-- Logo -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="E" styleClass="nav-emoji"/>
                <Label text="Utility Bill Manager" styleClass="nav-title"/>
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- User Info -->
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label fx:id="userLabel" text="Welcome, Admin" styleClass="user-label"/>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-button">
                    <padding>
                        <Insets top="8" right="16" bottom="8" left="16"/>
                    </padding>
                </Button>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <HBox>
            <!-- Sidebar Navigation -->
            <VBox spacing="5" minWidth="250" styleClass="sidebar">
                <padding>
                    <Insets top="20" right="15" bottom="20" left="15"/>
                </padding>

                <Label text="NAVIGATION" styleClass="sidebar-header">
                    <padding>
                        <Insets top="15" right="10" bottom="10" left="10"/>
                    </padding>
                </Label>

                <Button fx:id="dashboardBtn" text="  Dashboard"
                        onAction="#showDashboard"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button-active">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Button fx:id="customersBtn" text="  Customers"
                        onAction="#showCustomers"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Button fx:id="meterReadingsBtn" text=" Meter Readings"
                        onAction="#showMeterReadings"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Button fx:id="invoicesBtn" text="Invoices"
                        onAction="#showInvoices"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Button fx:id="paymentsBtn" text="Payments"
                        onAction="#showPayments"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Button fx:id="tariffsBtn" text="Tariffs"
                        onAction="#showTariffs"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Separator>
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Separator>

                <Label text="TOOLS" styleClass="sidebar-header">
                    <padding>
                        <Insets top="5" right="10" bottom="10" left="10"/>
                    </padding>
                </Label>

                <Button fx:id="billGeneratorBtn" text="Bill Calculator"
                        onAction="#showBillGenerator"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

                <Region VBox.vgrow="ALWAYS"/>

                <Separator/>

                <Label text="REPORTS" styleClass="sidebar-header">
                    <padding>
                        <Insets top="15" right="10" bottom="10" left="10"/>
                    </padding>
                </Label>

                <Button text="Analytics"
                        onAction="#showReports"
                        maxWidth="Infinity"
                        alignment="CENTER_LEFT"
                        styleClass="nav-button">
                    <padding>
                        <Insets top="12" right="15" bottom="12" left="15"/>
                    </padding>
                </Button>

            </VBox>

            <!-- Content Area -->
            <StackPane fx:id="contentArea" HBox.hgrow="ALWAYS" styleClass="light-background">
                <!-- Default Dashboard Content -->
                <VBox spacing="30" alignment="TOP_LEFT">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <!-- Page Header -->
                    <VBox spacing="5">
                        <Label text="Dashboard" styleClass="page-title"/>
                        <Label text="Overview of your utility billing system" styleClass="page-subtitle"/>
                    </VBox>

                    <!-- Stats Cards -->
                    <HBox spacing="20">
                        <!-- Total Customers -->
                        <VBox HBox.hgrow="ALWAYS" spacing="5" styleClass="stat-card">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label text="Total Customers" styleClass="stat-label"/>
                            <Label fx:id="totalCustomersLabel" text="0" styleClass="stat-value"/>
                            <Label text="Active accounts" styleClass="stat-description"/>
                        </VBox>

                        <!-- Unpaid Invoices -->
                        <VBox HBox.hgrow="ALWAYS" spacing="5" styleClass="stat-card-warning">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label text="Unpaid Invoices" styleClass="stat-label"/>
                            <Label fx:id="unpaidInvoicesLabel" text="0" styleClass="stat-value"/>
                            <Label text="Pending payment" styleClass="stat-description"/>
                        </VBox>

                        <!-- Total Revenue -->
                        <VBox HBox.hgrow="ALWAYS" spacing="5" styleClass="stat-card-success">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label text="Total Revenue" styleClass="stat-label"/>
                            <Label fx:id="totalRevenueLabel" text="£0.00" styleClass="stat-value"/>
                            <Label text="This month" styleClass="stat-description"/>
                        </VBox>

                        <!-- Overdue -->
                        <VBox HBox.hgrow="ALWAYS" spacing="5" styleClass="stat-card-danger">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label text="Overdue" styleClass="stat-label"/>
                            <Label fx:id="overdueLabel" text="0" styleClass="stat-value"/>
                            <Label text="Need attention" styleClass="stat-description"/>
                        </VBox>
                    </HBox>

                    <!-- Revenue Chart -->
                    <VBox spacing="15">
                        <Label text="Revenue Overview - Last 12 Months" styleClass="section-title"/>
                        <BarChart fx:id="revenueChart" legendVisible="false" animated="false" minHeight="250" maxHeight="300">
                            <xAxis>
                                <CategoryAxis fx:id="xAxis" label="Month"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxis" label="Revenue (£)"/>
                            </yAxis>
                        </BarChart>
                    </VBox>

                    <!-- Quick Actions -->
                    <VBox spacing="15">
                        <Label text="Quick Actions" styleClass="section-title"/>
                        <HBox spacing="15">
                            <Button text="Calculate Bill"
                                    onAction="#showBillGenerator"
                                    styleClass="primary-button">
                                <padding>
                                    <Insets top="12" right="20" bottom="12" left="20"/>
                                </padding>
                            </Button>
                            <Button text="+ Add Customer"
                                    onAction="#showAddCustomer"
                                    styleClass="secondary-button">
                                <padding>
                                    <Insets top="12" right="20" bottom="12" left="20"/>
                                </padding>
                            </Button>
                            <Button text="New Reading"
                                    onAction="#showMeterReadings"
                                    styleClass="secondary-button">
                                <padding>
                                    <Insets top="12" right="20" bottom="12" left="20"/>
                                </padding>
                            </Button>
                            <Button text="Generate Invoice"
                                    onAction="#showInvoices"
                                    styleClass="secondary-button">
                                <padding>
                                    <Insets top="12" right="20" bottom="12" left="20"/>
                                </padding>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Recent Activity -->
                    <VBox spacing="15" VBox.vgrow="ALWAYS">
                        <Label text="Recent Invoices" styleClass="section-title"/>
                        <TableView fx:id="recentInvoicesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="invoiceNumberCol" text="Invoice #" prefWidth="120"/>
                                <TableColumn fx:id="customerNameCol" text="Customer" prefWidth="200"/>
                                <TableColumn fx:id="amountCol" text="Amount" prefWidth="100"/>
                                <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="dueDateCol" text="Due Date" prefWidth="120"/>
                            </columns>
                            <placeholder>
                                <Label text="No recent invoices"/>
                            </placeholder>
                        </TableView>
                    </VBox>

                </VBox>
            </StackPane>
        </HBox>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="dateTimeLabel" text="" styleClass="status-text"/>
        </HBox>
    </bottom>

</BorderPane>